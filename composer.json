{
    "name": "elegantmedia/oauth2-myob",
    "type": "library",
    "description": "MYOB oAuth Client (based on League's conventions)",
    "keywords": [
        "elegantmedia",
        "oauth2-myob",
        "myob",
        "oauth2",
        "oauth",
        "myobaccountright",
        "myobessentials",
        "accountrightv2",
        "myobauth",
        "authmyob"
    ],
    "homepage": "https://github.com/elegantmedia/oauth2-myob",
    "license": "MIT",
    "authors": [
        {
            "name": "Elegant Media",
            "email": "info@elegantmedia.com.au",
            "homepage": "https://github.com/elegantmedia",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2|^8.0",
        "league/oauth2-client": "^2.6"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "ElegantMedia\\OAuth2\\Client\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ElegantMedia\\OAuth2\\Client\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "config": {
        "sort-packages": true
    }
}
